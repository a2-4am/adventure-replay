!cpu 6502
!to "build/LOADER.SYSTEM#FF2000",plain
*=$2000

; application-specific macros
!macro RWTS_FILENAMES {
side_b
         !byte 6
         !text "SIDE.B"
rwts_filenames
         !word side_b
}

; application-specific addresses
PRODOS_BUFFER             = $B800    ; $400 bytes
PREFIX_BUFFER             = $BC00    ; $40 bytes
AUTO_BUFFER               = $BC00    ; $100 bytes
RWTS                      = $BD00    ; max $100 bytes (persistent)
INPUT                     = $BE00    ; max $100 bytes (persistent)

         !src  "../common/src/loader.init.a"               ; must be first
                                                           ; exits via Stage1
         !src  "../common/src/loader.rwts.dos.shim.a"
         !src  "../common/src/loader.automate.input.a"
         !src  "../common/src/loader.better.input.a"

Stage1
         ; copy RWTS DOS shim into place
         ; (includes CloseAllFiles routine, so must do this first)
         +INSTALL_RWTS_DOS_SHIM

         ; 0800..1950
         +READ_ENTIRE_FILE parm_open1, parm_read1

         ; 4000..B7FF
         +READ_ENTIRE_FILE parm_open2, parm_read2

         ; set up our custom reset vector
         +STA_16 $3F2, QuitToProDOS
         jsr   ROM_FINALIZE_RESET

         ; shorten prompt
         ; TODO put this directly in OBJ file
         lda   #$8D
         sta   $836B
         lda   #$00
         sta   $836C
         lda   #$08
         sta   $836D
         lda   #$2C
         sta   $837E
         lda   #$02
         sta   $839A
         lda   #$3E
         sta   $839B
         lda   #$20
         sta   $839C

         lda   input_filename_start
         beq   @no_auto
         ; if we're using automation, install the AutomateInput hook
         +INSTALL_AUTOMATE_INPUT
         ; TODO
;          lda   #$20
;          sta   $6FCD
;          lda   #<AutomateInput
;          sta   $6FCE
;          lda   #>AutomateInput
;          sta   $6FCF
;          lda   #$00
;          sta   $6FD1
;          ; and bypass title screen / restore game / voice slot
;          lda   #$4C
;          sta   $6A99
;          lda   #$BE
;          sta   $6A9A
;          lda   #$6A
;          sta   $6A9B
;          ; and bypass text intro screen
;          lda   #$2C
;          sta   $6AC6
;          ; and de-randomize
;          lda   #$AD
;          sta   $6FC5
;          sta   $6FCA
         jmp   @start_game

@no_auto
         ; if we're not using automation, install the BetterInput hook instead
         +INSTALL_BETTER_INPUT
         +MAKE_JSR $1688, BlockingBetterInput

         ; TODO move these into OBJ file
         lda   #$10
         sta   $168D
         lda   #$1C
         sta   $168E

@start_game
         jsr   ROM_TEXT
         bit   $c053
         bit   $c054
         bit   $c057
         jmp   $81A3

parm_open1
         !byte 3
         !word obj_filename1
         !word PRODOS_BUFFER
         !byte 0
parm_read1
         !byte 4
         !byte 1
         !word $0800
         !word $FFFF
         !word 0
obj_filename1
         !byte 8
         !text "OBJ.0800"

parm_open2
         !byte 3
         !word obj_filename2
         !word PRODOS_BUFFER
         !byte 0
parm_read2
         !byte 4
         !byte 1
         !word $4000
         !word $FFFF
         !word 0
obj_filename2
         !byte 8
         !text "OBJ.4000"
